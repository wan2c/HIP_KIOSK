			function odd(data){
						
						var video_stat = document.getElementById('video_apa').value
						
						if (data % 2 == 0){
								document.getElementById("ganjil").style.color='red';
								if (video_stat=='menu') {
									 delayaudio++;
									document.getElementById("ganjil").innerHTML = delayaudio;
									var pagenum = document.getElementById('pn').innerHTML ;
									if (pagenum==1){
											document.getElementById('noti').innerHTML= "<b>MODULE 1</b>";								
									}
									if (pagenum==2){
